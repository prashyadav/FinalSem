<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edeba6"
    tools:context="com.example.prashanjeet.messmanager.AdminProfile">

    <TextView
        android:id="@+id/totalStudent"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp"
        android:text="Total Students"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/totalSpent"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/totalStudent"
        android:layout_marginTop="18dp"
        android:text="Total Amount Spent"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/month"
        android:layout_width="220sp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/totalSpent"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Enter month Number(1-12)"
        android:inputType="number" />

    <Button
        android:id="@+id/showBtn"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/month"
        android:text="Show Monthly Expense" />

    <TextView
        android:id="@+id/monthExp"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/monthExpShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/monthExp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:background="#0fedeba6" />

</RelativeLayout>
