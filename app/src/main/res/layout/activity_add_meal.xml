<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edeba6"
    tools:context="com.example.prashanjeet.messmanager.AddMeal">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="Meal"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/meal_title"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="title"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/meal_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/meal_title"
        android:layout_below="@+id/meal_title"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="desc"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/meal_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Choose Date"
        android:inputType="date"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/meal_description" />


    <Button
        android:id="@+id/meal_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/meal_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Add" />

</RelativeLayout>
